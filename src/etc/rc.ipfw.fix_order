#!/bin/sh

if [ "$1" = quietstop ]; then
	# Force first load behaviour on next ipfw start, to fix ipfw/pf ordering.
	rm -f /tmp/ipfw.firstload
	exit
fi

if [ "$1" = quietstart -a ! -f /tmp/ipfw.firstload ]; then
	# we need to make sure ipfw is loaded as last
	touch /tmp/ipfw.firstload

	pfctl -d
	pfctl -e
	exit
fi
